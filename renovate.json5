{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':dependencyDashboard',
    ':semanticCommits',
    ':automergeAll',
    ':enablePreCommit',
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/^mcpo/Dockerfile$/',
      ],
      matchStrings: [
        '# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\s*ARG MCPO_VERSION="(?<currentValue>.*?)"',
      ],
      datasourceTemplate: 'pypi',
      depNameTemplate: 'mcpo',
      extractVersionTemplate: '^v?(?<version>.*)$',
    },
  ],
  packageRules: [
    {
      matchManagers: [
        'pre-commit',
      ],
      automerge: true,
      automergeType: 'branch',
      semanticCommitType: 'chore',
    },
    {
      matchFileNames: [
        'mcpo/Dockerfile',
      ],
      semanticCommitType: 'feat',
      semanticCommitScope: 'deps',
      commitBody: 'Updates MCPO to version {{newVersion}}',
    },
  ],
  minimumReleaseAge: '4 hours',
}

